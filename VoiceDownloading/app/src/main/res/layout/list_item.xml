<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_marginStart="@dimen/list_item_padding"
        android:layout_marginTop="@dimen/list_item_padding"
        android:layout_marginBottom="@dimen/list_item_padding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/standard_text_size"
        android:textDirection="locale"
        android:layout_marginStart="@dimen/list_item_padding"
        android:layout_marginLeft="@dimen/list_item_padding"
        android:layout_marginEnd="@dimen/list_item_padding"
        android:layout_marginRight="@dimen/list_item_padding"
        android:layout_marginTop="@dimen/list_item_padding"
        app:layout_goneMarginEnd="@dimen/progress_bar_size"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_progress_bar"
        app:layout_constraintBottom_toTopOf="@id/description"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_text_size"
        android:textDirection="locale"
        android:layout_marginStart="@dimen/list_item_padding"
        android:layout_marginLeft="@dimen/list_item_padding"
        android:layout_marginEnd="@dimen/list_item_padding"
        android:layout_marginRight="@dimen/list_item_padding"
        android:layout_marginBottom="@dimen/list_item_padding"
        app:layout_goneMarginEnd="@dimen/progress_bar_size"
        android:gravity="start|center_vertical"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintEnd_toStartOf="@id/item_progress_bar"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ProgressBar
        android:id="@+id/item_progress_bar"
        android:layout_width="@dimen/progress_bar_size"
        android:layout_height="@dimen/progress_bar_size"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:background="@drawable/circle_shape"
        android:indeterminate="false"
        android:layout_margin="@dimen/list_item_padding"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/status_icon"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_margin="@dimen/list_item_padding"
        android:src="@drawable/ic_baseline_phone_android"
        app:layout_goneMarginEnd="@dimen/icon_gone_margin_end"
        app:layout_goneMarginTop="@dimen/icon_gone_margin"
        app:layout_goneMarginBottom="@dimen/icon_gone_margin"
        app:layout_constraintStart_toStartOf="@id/item_progress_bar"
        app:layout_constraintTop_toTopOf="@id/item_progress_bar"
        app:layout_constraintEnd_toEndOf="@id/item_progress_bar"
        app:layout_constraintBottom_toBottomOf="@id/item_progress_bar"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>
