<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:id="@+id/rootView"
	android:background="@drawable/top_rounded_white_background"
	android:paddingStart="@dimen/route_profile_padding"
	android:paddingEnd="@dimen/route_profile_padding"
	android:paddingTop="@dimen/listItemPadding"
	android:clickable="true"
	android:focusable="true"
	>

	<RelativeLayout
		android:layout_width="match_parent"
		android:id="@+id/header_container"
		android:paddingEnd="@dimen/listItemPadding"
		android:layout_height="@dimen/route_profile_header_height"
		tools:ignore="RtlSymmetry">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:minWidth="@dimen/listIconSize"
			android:id="@+id/exit_back_button_no_header_layout"
			android:layout_alignParentStart="true"
			>

			<ImageView
				android:layout_width="@dimen/route_profile_exit_button_size"
				android:layout_height="@dimen/route_profile_exit_button_size"
				android:layout_gravity="center_vertical"
				android:id="@+id/exit_button"
				android:background="@drawable/ic_baseline_highlight_off_24"
				tools:ignore="ContentDescription" />

		</LinearLayout>

		<TextView
			android:id="@+id/header_title_fragment"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/listItemPadding"
			android:layout_gravity="center"
			android:layout_toEndOf="@id/exit_back_button_no_header_layout"
			android:layout_centerVertical="true"
			android:textColor="#595959"
			android:textSize="@dimen/bigTextSize"
			android:textStyle="bold" />

	</RelativeLayout>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/scrollViewElevationProfile"
		android:descendantFocusability="beforeDescendants"
		android:focusableInTouchMode="true"
		android:scrollbars="vertical"
		android:layout_below="@id/header_container"
		android:fadeScrollbars="true"
		>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:focusableInTouchMode="true"
			android:orientation="vertical">

			<com.github.mikephil.charting.charts.CombinedChart
				android:id="@+id/elevation_chart"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				/>

			<androidx.constraintlayout.widget.ConstraintLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_marginTop="@dimen/route_profile_button_padding"
				android:layout_marginBottom="@dimen/listItemPadding"
				android:layout_height="@dimen/listItemHeightMedium"
				android:id="@+id/buttons_container">
			</androidx.constraintlayout.widget.ConstraintLayout>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/listItemPadding"
				android:id="@+id/climb_details_title"
				android:textStyle="bold"
				android:textSize="@dimen/mediumTextSize"
				/>

			<com.generalmagic.gemsdk.demo.activities.routeprofile.SortableClimbTableView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/table_view" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/route_profile_titles_padding"
				android:layout_marginBottom="@dimen/listItemPadding"
				android:id="@+id/surfaces_title"
				android:textStyle="bold"
				android:textSize="@dimen/mediumTextSize"
				/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/listItemPadding"
				android:id="@+id/highlighted_surface"
				android:textSize="@dimen/mediumTextSize"
				/>

			<com.github.mikephil.charting.charts.CombinedChart
				android:id="@+id/surfaces_chart"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"

				/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/route_profile_titles_padding"
				android:layout_marginBottom="@dimen/listItemPadding"
				android:id="@+id/roads_title"
				android:textStyle="bold"
				android:textSize="@dimen/mediumTextSize"
				/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/listItemPadding"
				android:id="@+id/highlighted_road"
				android:textSize="@dimen/mediumTextSize"
				/>

			<com.github.mikephil.charting.charts.CombinedChart
				android:id="@+id/roads_chart"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"

				/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/route_profile_titles_padding"
				android:layout_marginBottom="@dimen/listItemPadding"
				android:id="@+id/steepness_title"
				android:textStyle="bold"
				android:textSize="@dimen/mediumTextSize"
				/>

			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/listItemPadding">

				<ImageView android:id="@+id/highlighted_steepness_image"
					android:layout_width="@dimen/route_profile_steepness_icon_size"
					android:layout_height="@dimen/route_profile_steepness_icon_size"
					android:layout_gravity="center_vertical"
					android:scaleType="centerInside"
					android:adjustViewBounds="true"
					android:layout_alignParentStart="true"
					/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:layout_toEndOf="@id/highlighted_steepness_image"
					android:layout_marginStart="@dimen/bigPadding"
					android:id="@+id/highlighted_steepness_text"
					android:textSize="@dimen/mediumTextSize"
					/>
			</RelativeLayout>

			<com.github.mikephil.charting.charts.CombinedChart
				android:id="@+id/steepness_chart"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				/>

			<View
				android:layout_width="match_parent"
				android:layout_height="@dimen/route_profile_titles_padding"
				/>

		</LinearLayout>
	</ScrollView>
</RelativeLayout>
