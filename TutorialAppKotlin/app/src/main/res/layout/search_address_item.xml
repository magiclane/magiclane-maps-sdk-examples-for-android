<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_address_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants"
    android:minHeight="@dimen/address_search_list_item_height"
    android:paddingStart="@dimen/listItemPadding"
    android:paddingEnd="@dimen/listItemPadding">

    <ImageView
        android:id="@+id/address_icon"
        android:layout_width="@dimen/listIconSize"
        android:layout_height="@dimen/listIconSize"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/listItemPadding"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/address_icon"
        android:orientation="vertical"
        android:paddingStart="@dimen/listItemPadding"
        android:paddingEnd="@dimen/listItemPadding">

        <TextView
            android:id="@+id/address_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/detailed_text_view_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textSize="@dimen/mediumTextSize"
            android:visibility="gone" />

    </LinearLayout>
</RelativeLayout>
