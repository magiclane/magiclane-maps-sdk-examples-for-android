<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/filterView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <SearchView
        android:id="@+id/searchInput"
        android:layout_width="match_parent"
        android:layout_height="@dimen/filterHeight"
        android:layout_marginEnd="@dimen/smallPadding"
        android:layout_marginRight="@dimen/smallPadding"
        android:background="@drawable/rounded_background_white"
        android:closeIcon="@drawable/ic_close_gray_24dp"
        android:iconifiedByDefault="false"
        android:imeOptions="flagNoExtractUi"
        android:maxHeight="@dimen/filterHeight"
        android:minHeight="@dimen/filterMinHeight"
        android:searchIcon="@drawable/ic_search_gray_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="lollipop" />

</androidx.constraintlayout.widget.ConstraintLayout>


