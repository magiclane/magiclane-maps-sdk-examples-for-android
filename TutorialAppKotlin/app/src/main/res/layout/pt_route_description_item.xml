<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="?android:listPreferredItemHeight"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="6dp"
        android:paddingRight="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text=""
                android:textSize="@dimen/standardTextSize"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/segment_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true" />

        </LinearLayout>

        <TextView
            android:id="@+id/segment_depart_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textSize="@dimen/mediumTextSize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text=" "
            android:textSize="@dimen/mediumTextSize" />

        <TextView
            android:id="@+id/segment_arrive_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textSize="@dimen/mediumTextSize" />

    </LinearLayout>


    <com.generalmagic.sdk.examples.demo.activities.publictransport.PublicTransportRouteDescriptionLineView
        android:id="@+id/segment_line_view"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        custom:cellHeight="@dimen/route_list_cell_height"
        custom:radius="5dp"
        custom:strokeWidth="4dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">

        <TextView
            android:id="@+id/segment_start_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="@dimen/standardTextSize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/segment_station_time_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/standardTextSize" />

        <TextView
            android:id="@+id/segment_support_line_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/standardTextSize" />

        <RelativeLayout
            android:id="@+id/segment_towards_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/segment_line_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/standardTextSize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/segment_towards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingRight="4dp"
                android:singleLine="false"
                android:textSize="@dimen/standardTextSize"
                android:textStyle="italic" />

        </RelativeLayout>

        <TextView
            android:id="@+id/segment_platform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="@dimen/standardTextSize" />

        <TextView
            android:id="@+id/segment_time_to_next_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/standardTextSize" />

        <LinearLayout
            android:id="@+id/segment_stations_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

        </LinearLayout>

        <TextView
            android:id="@+id/segment_stay_on_same_vehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="@dimen/standardTextSize" />

        <TextView
            android:id="@+id/empty_text_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="@dimen/standardTextSize" />

    </LinearLayout>

</LinearLayout>
