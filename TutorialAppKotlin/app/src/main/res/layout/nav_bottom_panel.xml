<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/rounded_bottom_sheet_white"
	app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

	<TextView
		android:id="@+id/navMenuETAText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/nav_bottom_bar_horizontal_padding"
		android:layout_marginTop="@dimen/nav_bottom_bar_vertical_padding"
		android:layout_marginBottom="@dimen/nav_bottom_bar_vertical_padding"
		android:text=""
		android:textColor="@android:color/black"
		android:textSize="@dimen/nav_bottom_bar_big_text_size"
		android:textStyle="bold"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@id/navMenuETAUnit"
		app:layout_constraintHorizontal_chainStyle="packed"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.5" />

	<TextView
		android:id="@+id/navMenuETAUnit"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text=""
		android:textColor="@android:color/black"
		android:textSize="@dimen/nav_bottom_bar_small_text_size"
		android:textStyle="bold"
		app:layout_constraintBaseline_toBaselineOf="@id/navMenuETAText"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toEndOf="@id/navMenuETAText"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/navMenuTripDurationText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/nav_bottom_bar_vertical_padding"
		android:layout_marginBottom="@dimen/nav_bottom_bar_vertical_padding"
		android:text=""
		android:textColor="@android:color/black"
		android:textSize="@dimen/nav_bottom_bar_big_text_size"
		android:textStyle="bold"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@id/navMenuTripDurationUnit"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintHorizontal_chainStyle="packed"
		app:layout_constraintStart_toEndOf="@id/navMenuETAUnit"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/navMenuTripDurationUnit"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text=""
		android:textColor="@android:color/black"
		android:textSize="@dimen/nav_bottom_bar_small_text_size"
		android:textStyle="bold"
		app:layout_constraintBaseline_toBaselineOf="@id/navMenuTripDurationText"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@id/navMenuDistanceText"
		app:layout_constraintStart_toEndOf="@id/navMenuTripDurationText"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/navMenuDistanceText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/nav_bottom_bar_vertical_padding"
		android:layout_marginBottom="@dimen/nav_bottom_bar_vertical_padding"
		android:text=""
		android:textColor="@android:color/black"
		android:textSize="@dimen/nav_bottom_bar_big_text_size"
		android:textStyle="bold"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@id/navMenuDistanceUnit"
		app:layout_constraintHorizontal_chainStyle="packed"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.5" />

	<TextView
		android:id="@+id/navMenuDistanceUnit"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="@dimen/nav_bottom_bar_horizontal_padding"
		android:text=""
		android:textColor="@android:color/black"
		android:textSize="@dimen/nav_bottom_bar_small_text_size"
		android:textStyle="bold"
		app:layout_constraintBaseline_toBaselineOf="@id/navMenuDistanceText"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
