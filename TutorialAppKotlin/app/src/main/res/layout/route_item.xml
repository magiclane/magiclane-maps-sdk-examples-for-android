<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:descendantFocusability="blocksDescendants"
	android:minHeight="?android:listPreferredItemHeight">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:descendantFocusability="blocksDescendants"
		android:paddingLeft="?android:listPreferredItemPaddingLeft"
		android:paddingTop="@dimen/route_list_item_padding"
		android:paddingRight="?android:listPreferredItemPaddingRight"
		android:paddingBottom="@dimen/route_list_item_padding">

		<TextView
			android:id="@+id/trip_time_interval"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical|left"
			android:paddingTop="@dimen/route_list_cell_padding"
			android:paddingBottom="@dimen/route_list_cell_padding"
			android:textSize="@dimen/route_list_font_size" />

		<TextView
			android:id="@+id/trip_duration"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="true"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical|right"
			android:paddingTop="@dimen/route_list_cell_padding"
			android:paddingBottom="@dimen/route_list_cell_padding"
			android:textSize="@dimen/route_list_font_size"
			android:textStyle="bold" />

		<HorizontalScrollView
			android:id="@+id/route_description_scroll_container"
			android:layout_width="wrap_content"
			android:layout_height="@dimen/route_list_cell_height"
			android:layout_below="@+id/trip_duration"
			android:layout_alignParentLeft="true"
			android:layout_marginTop="@dimen/route_list_cell_padding"
			android:layout_marginBottom="@dimen/route_list_cell_padding"
			android:fadingEdgeLength="15dp"
			android:requiresFadingEdge="horizontal"
			android:scrollbars="none">

			<LinearLayout
				android:id="@+id/route_description_container"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:gravity="center_vertical"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/transport_mean_icon"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_gravity="center_vertical"
					android:adjustViewBounds="true"
					android:gravity="center_vertical" />

				<TextView
					android:id="@+id/transport_mean_text"
					android:layout_width="wrap_content"
					android:layout_height="@dimen/route_list_icon_size"
					android:layout_gravity="center_vertical"
					android:layout_marginLeft="@dimen/route_list_transport_mean_padding"
					android:gravity="center_vertical"
					android:textSize="@dimen/route_list_font_size"
					android:textStyle="bold" />

				<RelativeLayout
					android:id="@+id/transport_travel_time_container"
					android:layout_width="wrap_content"
					android:layout_height="@dimen/route_list_icon_size"
					android:orientation="vertical"
					android:paddingLeft="1dp"
					android:visibility="gone">

					<TextView
						android:id="@+id/transport_travel_time_value"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentLeft="true"
						android:layout_alignParentTop="true"
						android:layout_gravity="top"
						android:gravity="top"
						android:textSize="@dimen/route_list_font_size_small" />

					<TextView
						android:id="@+id/transport_travel_time_unit"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentLeft="true"
						android:layout_alignParentBottom="true"
						android:layout_gravity="bottom"
						android:gravity="bottom"
						android:textSize="@dimen/route_list_font_size_small" />
				</RelativeLayout>

				<ImageView
					android:id="@+id/transport_mean_separator"
					android:layout_width="wrap_content"
					android:layout_height="@dimen/route_list_separator_size"
					android:layout_gravity="center_vertical"
					android:adjustViewBounds="true"
					android:gravity="center_vertical"
					android:paddingLeft="@dimen/route_list_separator_padding"
					android:paddingRight="@dimen/route_list_separator_padding" />
			</LinearLayout>
		</HorizontalScrollView>

		<TextView
			android:id="@+id/trip_walk_dist_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/route_description_scroll_container"
			android:layout_alignParentLeft="true"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical"
			android:paddingTop="@dimen/route_list_cell_padding"
			android:paddingBottom="@dimen/route_list_cell_padding"
			android:textSize="@dimen/route_list_font_size_medium" />

		<TextView
			android:id="@+id/trip_fare"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/trip_walk_dist_time"
			android:layout_alignParentLeft="true"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical"
			android:paddingTop="@dimen/route_list_cell_padding"
			android:paddingBottom="@dimen/route_list_cell_padding"
			android:textSize="@dimen/route_list_font_size_medium" />

		<TextView
			android:id="@+id/trip_frequency"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/trip_fare"
			android:layout_alignParentLeft="true"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical"
			android:paddingTop="@dimen/route_list_cell_padding"
			android:paddingBottom="@dimen/route_list_cell_padding"
			android:textSize="@dimen/route_list_font_size_medium" />

		<TextView
			android:id="@+id/trip_changes"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/trip_frequency"
			android:layout_alignParentLeft="true"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical"
			android:paddingTop="@dimen/route_list_cell_padding"
			android:paddingBottom="@dimen/route_list_cell_padding"
			android:textSize="@dimen/route_list_font_size_medium" />

		<TextView
			android:id="@+id/trip_warning"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/trip_changes"
			android:layout_alignParentLeft="true"
			android:layout_alignParentBottom="true"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical"
			android:paddingTop="@dimen/route_list_cell_padding"
			android:paddingBottom="@dimen/route_list_cell_padding"
			android:textSize="@dimen/route_list_font_size_medium" />
	</RelativeLayout>

</RelativeLayout>
