<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="@dimen/route_list_cell_height"
	android:orientation="horizontal">

	<ImageView
		android:id="@+id/transport_mean_extra_icon"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_gravity="center_vertical"
		android:adjustViewBounds="true"
		android:gravity="center_vertical" />

	<TextView
		android:id="@+id/transport_mean_extra_text"
		android:layout_width="wrap_content"
		android:layout_height="@dimen/route_list_icon_size"
		android:layout_gravity="center_vertical"
		android:layout_marginLeft="@dimen/route_list_transport_mean_padding"
		android:gravity="center_vertical"
		android:textSize="@dimen/route_list_font_size"
		android:textStyle="bold" />

	<RelativeLayout
		android:id="@+id/transport_travel_time_extra_container"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingLeft="1dp"
		android:visibility="gone">

		<TextView
			android:id="@+id/transport_travel_extra_time_value"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:layout_gravity="top"
			android:gravity="top"
			android:textSize="@dimen/route_list_font_size_small" />

		<TextView
			android:id="@+id/transport_travel_extra_time_unit"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentBottom="true"
			android:layout_gravity="bottom"
			android:gravity="bottom"
			android:textSize="@dimen/route_list_font_size_small" />
	</RelativeLayout>

	<ImageView
		android:id="@+id/transport_mean_extra_separator"
		android:layout_width="wrap_content"
		android:layout_height="@dimen/route_list_separator_size"
		android:layout_gravity="center_vertical"
		android:adjustViewBounds="true"
		android:gravity="center_vertical"
		android:paddingLeft="@dimen/route_list_separator_padding"
		android:paddingRight="@dimen/route_list_separator_padding" />

</LinearLayout>
