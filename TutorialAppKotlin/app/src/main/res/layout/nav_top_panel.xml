<?xml version="1.0" encoding="utf-8"?>
<com.generalmagic.gemsdk.demo.controllers.common.NavTopPanelController xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/topPanelController"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_alignParentLeft="true"
	android:layout_alignParentTop="true"
	android:background="@drawable/bottom_rounded_black_button"
	android:visibility="gone">

	<RelativeLayout
		android:id="@+id/navigation_panel"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:minHeight="100dp">

		<RelativeLayout
			android:id="@+id/adas_container"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginTop="@dimen/nav_top_panel_padding"
			android:layout_marginRight="@dimen/nav_top_panel_padding"
			android:layout_marginBottom="@dimen/nav_top_panel_padding">

			<ImageView
				android:id="@+id/adas_image"
				android:layout_width="56dip"
				android:layout_height="56dip"
				android:visibility="gone" />
		</RelativeLayout>

		<TextView
			android:id="@+id/status_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:layout_toLeftOf="@id/adas_container"
			android:ellipsize="end"
			android:gravity="center_horizontal"
			android:maxLines="3"
			android:textColor="@android:color/white"
			android:textSize="24sp"
			android:visibility="gone" />

		<LinearLayout
			android:id="@+id/turn_panel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:layout_marginLeft="@dimen/nav_top_panel_padding"
			android:layout_marginTop="@dimen/nav_top_panel_padding"
			android:layout_marginRight="@dimen/nav_top_panel_padding"
			android:minWidth="80dp"
			android:orientation="vertical">

			<ImageView
				android:id="@+id/turn_image"
				android:layout_width="@dimen/nav_top_panel_big_img_size"
				android:layout_height="@dimen/nav_top_panel_big_img_size"
				android:layout_gravity="center_horizontal" />

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/turn_distance"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@android:color/white"
					android:textSize="30sp"
					android:textStyle="bold" />

				<TextView
					android:id="@+id/turn_distance_unit"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@android:color/white"
					android:textSize="18sp"
					android:textStyle="bold" />
			</LinearLayout>
		</LinearLayout>

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignWithParentIfMissing="true"
			android:layout_alignTop="@id/turn_panel"
			android:layout_alignBottom="@id/turn_panel"
			android:layout_marginRight="@dimen/nav_top_panel_padding"
			android:layout_marginBottom="@dimen/nav_top_panel_padding"
			android:layout_toLeftOf="@id/adas_container"
			android:layout_toEndOf="@id/turn_panel">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:orientation="vertical">

				<ImageView
					android:id="@+id/road_code"
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:layout_gravity="center"
					android:layout_toRightOf="@id/turn_image"
					android:visibility="gone" />

				<TextView
					android:id="@+id/turn_instruction"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_horizontal"
					android:ellipsize="end"
					android:gravity="center"
					android:maxLines="3"
					android:textColor="@android:color/white"
					android:textSize="24sp" />
			</LinearLayout>

			<ImageView
				android:id="@+id/sign_post"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_gravity="center" />
		</FrameLayout>
	</RelativeLayout>

	<LinearLayout
		android:id="@+id/traffic_panel"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/navigation_panel"
		android:layout_alignParentLeft="true"
		android:background="@drawable/bottom_rounded_white_button"
		android:orientation="horizontal"
		android:visibility="gone">

		<FrameLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent">

			<ImageView
				android:id="@+id/traffic_image"
				android:layout_width="44dp"
				android:layout_height="44dp"
				android:layout_gravity="center_vertical"
				android:layout_marginLeft="@dimen/nav_top_panel_padding"
				android:layout_marginTop="5dp"
				android:layout_marginRight="@dimen/nav_top_panel_padding"
				android:layout_marginBottom="@dimen/nav_top_panel_padding" />

			<ImageView
				android:id="@+id/end_of_section"
				android:layout_width="44dp"
				android:layout_height="44dp"
				android:layout_gravity="center_vertical"
				android:layout_marginLeft="@dimen/nav_top_panel_padding"
				android:layout_marginTop="5dp"
				android:layout_marginRight="@dimen/nav_top_panel_padding"
				android:layout_marginBottom="@dimen/nav_top_panel_padding"
				android:visibility="gone" />
		</FrameLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginRight="@dimen/nav_top_panel_padding"
			android:orientation="vertical">

			<TextView
				android:id="@+id/traffic_event_description"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@android:color/black"
				android:textSize="22sp"
				android:textStyle="bold" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="3dp"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/distance_to_traffic_prefix"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@android:color/black"
					android:textSize="16sp"
					android:textStyle="bold" />

				<TextView
					android:id="@+id/distance_to_traffic"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@android:color/black"
					android:textSize="22sp"
					android:textStyle="bold" />

				<TextView
					android:id="@+id/distance_to_traffic_unit"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@android:color/black"
					android:textSize="16sp"
					android:textStyle="bold" />

				<Space
					android:layout_width="0dp"
					android:layout_height="0dp"
					android:layout_weight="1" />

				<TextView
					android:id="@+id/traffic_delay_time"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@android:color/black"
					android:textSize="22sp"
					android:textStyle="bold" />

				<TextView
					android:id="@+id/traffic_delay_time_unit"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@android:color/black"
					android:textSize="16sp"
					android:textStyle="bold" />

				<TextView
					android:id="@+id/traffic_delay_distance"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="8dp"
					android:textColor="@android:color/black"
					android:textSize="22sp"
					android:textStyle="bold" />

				<TextView
					android:id="@+id/traffic_delay_distance_unit"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@android:color/black"
					android:textSize="16sp"
					android:textStyle="bold" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/alarm_panel"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/traffic_panel"
		android:layout_alignParentLeft="true"
		android:background="@drawable/bottom_rounded_white_button"
		android:orientation="horizontal"
		android:visibility="gone">

		<RelativeLayout
			android:id="@+id/alarm_icon_container"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical">

			<ImageView
				android:id="@+id/alarm_icon"
				android:layout_width="44dp"
				android:layout_height="44dp"
				android:layout_gravity="center"
				android:layout_marginLeft="@dimen/nav_top_panel_padding"
				android:layout_marginTop="5dp"
				android:layout_marginRight="@dimen/nav_top_panel_padding"
				android:layout_marginBottom="@dimen/nav_top_panel_padding" />

			<TextView
				android:id="@+id/alarm_score"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_marginLeft="-20dp"
				android:layout_marginTop="-5dp"
				android:layout_toRightOf="@id/alarm_icon"
				android:background="@drawable/white_badge_circle"
				android:gravity="center"
				android:minWidth="26dp"
				android:textColor="@android:color/black"
				android:textSize="14dp"
				android:visibility="gone" />

		</RelativeLayout>

		<LinearLayout
			android:id="@+id/alarm_distance_container"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/distance_to_alarm"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@android:color/black"
				android:textSize="22sp"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/distance_to_alarm_unit"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@android:color/black"
				android:textSize="16sp"
				android:textStyle="bold" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/voting_panel"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:gravity="right"
			android:orientation="horizontal"
			android:visibility="gone">

			<ImageView
				android:id="@+id/thumb_down"
				android:layout_width="44dp"
				android:layout_height="44dp"
				android:layout_gravity="center"
				android:layout_marginLeft="@dimen/nav_top_panel_padding"
				android:layout_marginTop="5.5dp"
				android:layout_marginRight="@dimen/nav_top_panel_padding"
				android:layout_marginBottom="@dimen/nav_top_panel_padding" />

			<ImageView
				android:id="@+id/thumb_up"
				android:layout_width="44dp"
				android:layout_height="44dp"
				android:layout_gravity="center"
				android:layout_marginLeft="@dimen/nav_top_panel_padding"
				android:layout_marginTop="5.5dp"
				android:layout_marginRight="@dimen/nav_top_panel_padding"
				android:layout_marginBottom="@dimen/nav_top_panel_padding" />
		</LinearLayout>

	</LinearLayout>

</com.generalmagic.gemsdk.demo.controllers.common.NavTopPanelController>
