<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal">

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingLeft="6dp"
		android:paddingRight="2dp">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:text=""
			android:textSize="@dimen/standardTextSize"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/segment_arrive_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical|center_horizontal"
			android:gravity="center_vertical|center_horizontal"
			android:textSize="@dimen/mediumTextSize" />

	</LinearLayout>

	<com.generalmagic.gemsdkdemo.activities.publictransport.PublicTransportRouteDescriptionLineView
		android:id="@+id/segment_line_view"
		android:layout_width="20dp"
		android:layout_height="match_parent"
		custom:cellHeight="@dimen/route_list_cell_height"
		custom:radius="5dp"
		custom:strokeWidth="4dp" />

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:orientation="horizontal"
		android:paddingLeft="2dp"
		android:paddingRight="2dp">

		<TextView
			android:id="@+id/segment_arrive_station"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:maxLines="2"
			android:textSize="@dimen/standardTextSize"
			android:textStyle="bold" />

	</LinearLayout>

</LinearLayout>
