<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	app:cardElevation="@dimen/map_styles_card_elevation"
	app:cardCornerRadius="@dimen/map_styles_corner_radius"
	android:layout_margin="@dimen/map_styles_padding">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/map_styles_list_item_bgnd_color">

        <ImageView
            android:id="@+id/preview_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/map_styles_item_padding"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/status_icon"
            android:layout_width="@dimen/maps_status_icon_size"
            android:layout_height="@dimen/maps_status_icon_size"
            android:layout_marginEnd="@dimen/listItemPadding"
            app:layout_constraintBottom_toTopOf="@+id/item_progress_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_progress_bar"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="@dimen/maps_status_icon_size"
            android:layout_height="@dimen/maps_status_icon_size"
            android:layout_margin="@dimen/map_styles_item_padding"
            android:src="@drawable/ic_delete_red_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/status_icon"
            app:layout_constraintTop_toBottomOf="@+id/preview_image"
            tools:ignore="ContentDescription" />

        <ProgressBar
            android:id="@+id/item_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="@dimen/maps_status_icon_size"
            android:layout_height="@dimen/maps_status_icon_size"
            android:layout_marginEnd="@dimen/listItemPadding"
            android:background="@drawable/circle_shape"
            android:indeterminate="false"
            android:progressDrawable="@drawable/circular_progress_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/preview_image" />
		
        <TextView
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/listItemPadding"
            android:layout_marginEnd="@dimen/map_styles_status_left_padding"
            android:gravity="center_vertical"
            android:minHeight="@dimen/map_styles_min_height_footer"
            android:textColor="@android:color/black"
            android:textSize="@dimen/standardTextSize"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/item_progress_bar"
            app:layout_constraintStart_toStartOf="@id/preview_image"
            app:layout_constraintTop_toBottomOf="@id/preview_image" />
    </androidx.constraintlayout.widget.ConstraintLayout>
	
</androidx.cardview.widget.CardView>
