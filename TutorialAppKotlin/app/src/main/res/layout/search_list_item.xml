<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/search_item"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:descendantFocusability="beforeDescendants"
	android:minHeight="@dimen/listCellMinHeight">

	<ImageView
		android:id="@+id/icon"
		android:layout_width="@dimen/listIconSize"
		android:layout_height="@dimen/listIconSize"
		android:layout_alignParentStart="true"
		android:layout_centerVertical="true"
		android:layout_marginStart="@dimen/listItemPadding" />

	<LinearLayout
		android:id="@+id/status_container"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_centerVertical="true"
		android:layout_marginEnd="@dimen/listItemPadding"
		android:orientation="vertical">

		<TextView
			android:id="@+id/status_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="end"
			android:textColor="@android:color/black"
			android:textSize="@dimen/standardTextSize" />

		<TextView
			android:id="@+id/status_description"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="end"
			android:textSize="@dimen/smallTextSize" />

	</LinearLayout>

	<LinearLayout
		android:id="@+id/text_container"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignWithParentIfMissing="true"
		android:layout_centerVertical="true"
		android:layout_marginLeft="@dimen/listItemPadding"
		android:layout_marginRight="@dimen/listItemPadding"
		android:layout_toStartOf="@id/status_container"
		android:layout_toEndOf="@id/icon"
		android:orientation="vertical">

		<TextView
			android:id="@+id/text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="start|center_vertical"
			android:textColor="@android:color/black"
			android:textSize="@dimen/standardTextSize" />

		<TextView
			android:id="@+id/description"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="start"
			android:textSize="@dimen/smallTextSize" />

	</LinearLayout>

</RelativeLayout>
