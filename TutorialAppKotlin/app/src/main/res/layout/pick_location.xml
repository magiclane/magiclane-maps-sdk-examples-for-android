<?xml version="1.0" encoding="utf-8"?>
<com.generalmagic.gemsdkdemo.controllers.common.PickLocationController xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/pickLocation"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:visibility="invisible">

	<TextView
		android:id="@+id/pickTopText"
		android:layout_width="match_parent"
		android:layout_height="32sp"
		android:layout_margin="@dimen/activity_vertical_margin"
		android:background="@color/colorPrimary"
		android:gravity="center"
		android:text="Pick a Location"
		android:textColor="@color/colorWhiteFull"
		android:textStyle="bold"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />


	<ImageView
		android:id="@+id/pickIcon"
		android:layout_width="30dp"
		android:layout_height="30dp"
		android:translationY="-45dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

</com.generalmagic.gemsdkdemo.controllers.common.PickLocationController>
