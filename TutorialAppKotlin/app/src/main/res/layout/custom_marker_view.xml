<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/marker_view"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:orientation="vertical">

	<TextView android:id="@+id/marker_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:textStyle="bold"
		android:textSize="@dimen/route_profile_custom_pin_text_size"
		/>

	<ImageView android:id="@+id/marker_image"
		android:layout_width="@dimen/route_profile_custom_pin_size"
		android:layout_height="@dimen/route_profile_custom_pin_size"
		android:layout_gravity="center"
		tools:ignore="ContentDescription" />

</LinearLayout>
