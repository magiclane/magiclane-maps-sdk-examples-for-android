<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_10">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/setting_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:textSize="@dimen/big_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/value_text"
        android:layout_width="@dimen/setting_text_width_small"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="@dimen/big_text_size"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/item_guideline"
        app:layout_constraintEnd_toEndOf="@id/item_guideline"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="10 kg" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/value_from_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAlignment="center"
        android:textSize="@dimen/standard_text_size"
        app:layout_constraintBottom_toBottomOf="@id/item_slider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_guideline"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toTopOf="@id/item_slider"
        tools:text="100 kg" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/value_to_text"
        android:layout_width="@dimen/setting_text_width_small"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAlignment="center"
        android:textSize="@dimen/standard_text_size"
        app:layout_constraintBottom_toBottomOf="@id/item_slider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_guideline"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintTop_toTopOf="@id/item_slider"
        tools:text="100 kg" />

    <com.google.android.material.slider.Slider
        android:id="@+id/item_slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_10"
        app:layout_constraintEnd_toStartOf="@id/value_to_text"
        app:layout_constraintStart_toEndOf="@id/value_from_text"
        app:layout_constraintTop_toBottomOf="@id/setting_item_text" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>
