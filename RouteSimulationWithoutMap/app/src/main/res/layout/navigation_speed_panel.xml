<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
	android:layout_height="@dimen/nav_speed_panel_height"
	android:clickable="true"
	android:focusable="true"
    android:layoutDirection="ltr"
	android:background="@drawable/rounded_left_corners_white"
    tools:targetApi="jelly_bean_mr1">
	
	<include android:id="@+id/nav_speed_limit_sign"
		layout="@layout/nav_speed_limit_sign"
		android:layout_width="@dimen/nav_speed_panel_sign_size"
		android:layout_height="@dimen/nav_speed_panel_sign_size"
		android:layout_marginStart="@dimen/nav_speed_panel_sign_padding"
        android:layout_marginLeft="@dimen/nav_speed_panel_sign_padding"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		android:visibility="gone" />

	<TextView
		android:id="@+id/nav_current_speed"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toTopOf="parent" 
		app:layout_constraintStart_toEndOf="@id/nav_speed_limit_sign"
		app:layout_constraintBottom_toTopOf="@id/nav_current_speed_unit"
		app:layout_constraintEnd_toEndOf="parent"
		android:paddingStart="@dimen/list_item_padding"
        android:paddingLeft="@dimen/list_item_padding"
		app:layout_goneMarginStart="@dimen/nav_speed_panel_lateral_padding"
		android:layout_marginEnd="@dimen/list_item_padding"
        android:layout_marginRight="@dimen/list_item_padding"
		android:paddingEnd="@dimen/route_status_text_lateral_padding"
        android:paddingRight="@dimen/route_status_text_lateral_padding"
		app:layout_constraintVertical_bias="0.65"
		app:layout_constraintVertical_chainStyle="packed"
		android:textSize="@dimen/speed_panel_text_size"
		android:textStyle="bold"/>
		

	<TextView
		android:id="@+id/nav_current_speed_unit"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toBottomOf="@id/nav_current_speed"
		app:layout_constraintStart_toEndOf="@id/nav_speed_limit_sign"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_goneMarginStart="@dimen/nav_speed_panel_lateral_padding"
		android:paddingEnd="@dimen/route_status_text_lateral_padding"
        android:paddingRight="@dimen/route_status_text_lateral_padding"
		android:translationY="-6dp"
		android:textSize="@dimen/small_text_size" />

</androidx.constraintlayout.widget.ConstraintLayout>
