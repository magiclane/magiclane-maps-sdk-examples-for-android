<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:background="@android:color/transparent"
    tools:targetApi="jelly_bean_mr1">

    <RelativeLayout
        android:id="@+id/navigation_panel_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="left"
        android:focusable="false"
        android:background="@drawable/bottom_rounded_black_button">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/nav_top_panel_min_height"
            android:id="@+id/navigation_panel">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/nav_top_panel_padding"
                android:padding="@dimen/small_padding"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:id="@+id/adas_container"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView android:id="@+id/adas_image"
                    android:layout_height="@dimen/nav_top_panel_adas_img_size"
                    android:layout_width="@dimen/nav_top_panel_adas_img_size"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:ignore="ContentDescription" />

            </FrameLayout>

            <TextView android:id="@+id/adas_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/list_item_padding"
                android:maxWidth="@dimen/nav_top_panel_adas_img_size"
                android:gravity="center"
                android:layout_below="@id/adas_container"
                android:layout_alignStart="@id/adas_container"
                android:layout_alignEnd="@id/adas_container"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/nav_top_panel_adas_text_size"
                android:maxLines="1"
                android:ellipsize="end"
                android:visibility="gone"/>

            <TextView android:id="@+id/status_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/adas_container"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:textSize="@dimen/nav_top_panel_status_text_size"
                android:maxLines="3"
                android:ellipsize="end"
                android:visibility="gone"
                />

            <RelativeLayout
                android:id="@+id/turn_panel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/nav_top_panel_padding"
                    android:layout_marginTop="@dimen/nav_top_panel_padding"
                    android:layout_marginRight="@dimen/nav_top_panel_padding"
                    android:layout_marginBottom="@dimen/nav_top_panel_padding"
                    android:minWidth="@dimen/nav_top_panel_turn_min_width"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/turn_image"
                        android:layout_width="@dimen/nav_top_panel_big_img_size"
                        android:layout_height="@dimen/nav_top_panel_big_img_size"
                        android:layout_gravity="center_horizontal"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layoutDirection="locale"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/turn_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/nav_top_panel_turn_big_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/turn_distance_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/nav_top_panel_turn_small_text_size"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

            <FrameLayout
                android:id="@+id/road_instruction_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_alignTop="@id/turn_panel"
                android:layout_alignBottom="@id/turn_panel"
                android:layout_marginTop="@dimen/nav_top_panel_padding"
                android:layout_marginBottom="@dimen/nav_top_panel_padding"
                android:layout_toLeftOf="@id/adas_container"
                android:layout_toRightOf="@id/turn_panel">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/road_code"
                        android:layout_width="@dimen/nav_top_panel_road_img_size"
                        android:layout_height="@dimen/nav_top_panel_road_img_size"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/turn_instruction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="3"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/nav_top_panel_turn_medium_text_size" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/sign_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    tools:ignore="ContentDescription" />
            </FrameLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/traffic_panel"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/navigation_panel"
            android:background="@drawable/bottom_rounded_white_button"
            android:visibility="gone">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView android:id="@+id/traffic_image"
                    android:layout_width="@dimen/nav_top_panel_traffic_img_size"
                    android:layout_height="@dimen/nav_top_panel_traffic_img_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/nav_top_panel_padding"
                    android:layout_marginRight="@dimen/nav_top_panel_padding"
                    android:layout_marginTop="@dimen/nav_top_panel_padding"
                    android:layout_marginBottom="@dimen/nav_top_panel_padding"
                    tools:ignore="ContentDescription" />

                <ImageView android:id="@+id/end_of_section_image"
                    android:layout_width="@dimen/nav_top_panel_traffic_img_size"
                    android:layout_height="@dimen/nav_top_panel_traffic_img_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/nav_top_panel_padding"
                    android:layout_marginRight="@dimen/nav_top_panel_padding"
                    android:layout_marginTop="@dimen/nav_top_panel_padding"
                    android:layout_marginBottom="@dimen/nav_top_panel_padding"
                    android:visibility="gone"
                    tools:ignore="ContentDescription" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/nav_top_panel_padding"
                android:layout_marginEnd="@dimen/nav_top_panel_padding">

                <TextView android:id="@+id/traffic_event_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/nav_top_panel_traffic_big_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/nav_top_panel_traffic_margin_bottom"
                    android:layoutDirection="locale" >

                    <TextView android:id="@+id/distance_to_traffic_prefix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/nav_top_panel_traffic_small_text_size"/>

                    <TextView android:id="@+id/distance_to_traffic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/nav_top_panel_traffic_big_text_size"/>

                    <TextView android:id="@+id/distance_to_traffic_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/nav_top_panel_traffic_small_text_size"/>

                    <TextView android:id="@+id/distance_to_traffic_suffix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/nav_top_panel_traffic_small_text_size"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView android:id="@+id/traffic_delay_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/nav_top_panel_traffic_big_text_size"/>

                    <TextView android:id="@+id/traffic_delay_time_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/nav_top_panel_traffic_small_text_size"/>

                    <TextView android:id="@+id/traffic_delay_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/nav_top_panel_traffic_delay_margin"
                        android:layout_marginLeft="@dimen/nav_top_panel_traffic_delay_margin"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/nav_top_panel_traffic_big_text_size" />

                    <TextView android:id="@+id/traffic_delay_distance_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/nav_top_panel_traffic_small_text_size"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/alarm_panel"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/traffic_panel"
            android:background="@drawable/bottom_rounded_white_button"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/alarm_icon_container"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">

                <ImageView android:id="@+id/alarm_icon"
                    android:layout_width="@dimen/nav_top_panel_alarm_img_size"
                    android:layout_height="@dimen/nav_top_panel_alarm_img_size"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/nav_top_panel_padding"
                    android:layout_marginRight="@dimen/nav_top_panel_padding"
                    android:layout_marginTop="@dimen/nav_top_panel_padding"
                    android:layout_marginBottom="@dimen/nav_top_panel_padding"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/alarm_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/alarm_icon"
                    android:layout_toEndOf="@id/alarm_icon"
                    android:layout_marginLeft="-20dp"
                    android:layout_marginStart="-20dp"
                    android:layout_marginTop="-5dp"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/nav_top_panel_alarm_small_text_size"
                    android:minWidth="@dimen/nav_top_panel_alarm_min_width"
                    android:visibility="gone"
                    android:background="@drawable/white_badge_circle" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/alarm_distance_container"
                android:orientation="horizontal"
                android:layoutDirection="locale"
                android:layout_gravity="center_vertical">

                <TextView android:id="@+id/distance_to_alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/nov_top_panel_alarm_big_text_size" />

                <TextView android:id="@+id/distance_to_alarm_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/nav_top_panel_alarm_medium_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/voting_panel"
                android:orientation="horizontal"
                android:visibility="gone"
                android:gravity="end"
                android:layout_gravity="center_vertical">

                <FrameLayout android:id="@+id/thumb_down_background"
                    android:layout_width="@dimen/nav_top_panel_voting_img_size"
                    android:layout_height="@dimen/nav_top_panel_voting_img_size"
                    android:layout_gravity="center"
                    android:background="@drawable/round_button_background"
                    android:layout_marginLeft="@dimen/nav_top_panel_padding"
                    android:layout_marginRight="@dimen/nav_top_panel_padding"
                    android:layout_marginTop="@dimen/nav_top_panel_padding"
                    android:layout_marginBottom="@dimen/nav_top_panel_padding">

                    <ImageView android:id="@+id/thumb_down"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:ignore="ContentDescription" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/thumb_up_background"
                    android:layout_width="@dimen/nav_top_panel_voting_img_size"
                    android:layout_height="@dimen/nav_top_panel_voting_img_size"
                    android:layout_gravity="center"
                    android:background="@drawable/round_button_background"
                    android:layout_marginLeft="@dimen/nav_top_panel_padding"
                    android:layout_marginRight="@dimen/nav_top_panel_padding"
                    android:layout_marginTop="@dimen/nav_top_panel_padding"
                    android:layout_marginBottom="@dimen/nav_top_panel_padding">

                    <ImageView android:id="@+id/thumb_up"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:ignore="ContentDescription" />

                </FrameLayout>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>