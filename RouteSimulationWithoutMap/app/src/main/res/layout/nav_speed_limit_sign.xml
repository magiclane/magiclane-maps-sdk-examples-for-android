<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/nav_speed_panel_sign_size"
    android:layout_height="@dimen/nav_speed_panel_sign_size"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/speed_limit_sign">
	
	<TextView
		android:id="@+id/nav_current_speed_limit"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:paddingBottom="@dimen/nav_speed_panel_sign_padding"
		android:textColor="@android:color/black"
		android:textSize="@dimen/nav_speed_panel_text_size"
		android:textStyle="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>
