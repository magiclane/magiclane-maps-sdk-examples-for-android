<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/itemHeight"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/itemTextSize"
        android:layout_marginStart="@dimen/bigPadding"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/status_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/listItemPadding"
        android:layout_marginEnd="@dimen/listItemPadding"
        android:paddingTop="@dimen/listItemPadding"
        android:textColor="@android:color/black"
        android:textSize="@dimen/standardTextSize"
        app:layout_constraintBottom_toTopOf="@id/status_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_goneMarginBottom="@dimen/listItemPadding" />

    <TextView
        android:id="@+id/status_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/listItemPadding"
        android:layout_marginEnd="@dimen/listItemPadding"
        android:paddingBottom="@dimen/listItemPadding"
        android:textSize="@dimen/smallTextSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/status_text" />
    
</androidx.constraintlayout.widget.ConstraintLayout>
