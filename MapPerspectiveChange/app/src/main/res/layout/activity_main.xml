<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.generalmagic.sdk.examples.perspectivechange.MainActivity">

    <com.generalmagic.sdk.core.GemSurfaceView
        android:id="@+id/gem_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:backgroundTint="@color/purple_500"
        android:text="@string/three_dimensional"
        android:textColor="@color/white"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="@id/gem_surface"
        app:layout_constraintStart_toStartOf="@id/gem_surface"
        tools:ignore="ContentDescription,UnusedAttribute" />
    
</androidx.constraintlayout.widget.ConstraintLayout>
