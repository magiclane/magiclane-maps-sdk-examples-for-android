<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    
    <ScrollView
        android:id="@+id/chart_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        android:fadeScrollbars="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/instant_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/big_padding"
                android:layout_marginEnd="@dimen/big_padding"
                android:text="@string/instant"
                android:textStyle="bold"
                android:textSize="@dimen/big_text_size"/>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/instant_chart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/chart_min_height"/>

            <TextView
                android:id="@+id/ongoing_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/big_padding"
                android:layout_marginEnd="@dimen/big_padding"
                android:text="@string/ongoing"
                android:textStyle="bold"
                android:textSize="@dimen/big_text_size"/>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/ongoing_chart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/chart_min_height"/>

            <TextView
                android:id="@+id/last_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/big_padding"
                android:layout_marginEnd="@dimen/big_padding"
                android:text="@string/last"
                android:textStyle="bold"
                android:textSize="@dimen/big_text_size"/>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/last_chart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/chart_min_height"/>

            <TextView
                android:id="@+id/combined_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/big_padding"
                android:layout_marginEnd="@dimen/big_padding"
                android:text="@string/combined"
                android:textStyle="bold"
                android:textSize="@dimen/big_text_size"/>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/combined_chart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/chart_min_height"/>
        
        </LinearLayout>
        
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
